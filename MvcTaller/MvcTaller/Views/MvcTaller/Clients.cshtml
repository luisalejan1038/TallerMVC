@{
    ViewBag.Title = "Clients";
}

<h2>Clients</h2>

<link rel="stylesheet" href="/Content/bootstrap.css">
<link rel="stylesheet" href="/Content/estilos.css">
<div class="container">
		<div class="row">
			<div class="span3">
				<h4>Lista de Clientes<i class="icon-folder-close"></i></h4>
				<div class="panellista">
					<!-- Lista de clientes con número de clientes y correo -->
				</div>		
			</div>
			
			<div class="span4">
				<h4><em>Detalle de Cliente</em><i class="icon-comment"></i></h4>
				<div class="paneldetalles">
							<div class="id">
                                <label>Id:</label> 
                                <input type="text" name="id" id="texto6" disabled>
                                <i class="icon-remove"></i>
							</div>
							<div class="name">
                                <label>Nombre:</label> 
							    <input type="text" name="named" id="texto7"/>
							</div>
							<div class="email">
                                <label>Email:</label> 
							    <input type="text" name="email" id="texto8"/>
							</div>
							<div class="tel">
                                <label>Telefono:</label> 
							    <input type="text" name="tel" id="texto9"/>
							</div>
							<div class="descripcion">
                                <label>Descripcion:</label> 
							    <input type="text" name="descripcion" id="texto10"/>
							</div>
                            <div>
							    <button class="btn btn-info" type="Button" id="btnActualizarCliente" name="agregar"><i class="icon-search"></i>Actualizar
							    </button>
						    </div>
				</div>
			</div>
			
			<div class="span5">
				<h4>Creación de Clientes<i class="icon-hand-right"></i></h4>
				<div class="panelcreacion">
				<!-- Captura de datos para crear nuevo cliente -->
					<form>						
						<div>
							<label>Id:</label> 
							<input type="text" name="id" id="texto1"/>
						</div>
						<div>
							<label>Nombre:</label> 
							<input type="text" name="name" id="texto2"/>
						</div>
						<div>
							<label>Email:</label> 
							<input type="text" name="email" id="texto3"/>
						</div>
						<div>
							<label>Telefono:</label> 
							<input type="text" name="tel" id="texto4"/>
						</div>
						<div>
							<label>Descripcion:</label> 
							<input type="text" name="descripcion" id="texto5"/>
						</div>
						<div>
							<button class="btn btn-primary" type="Button" id="btnCrearCliente" name="agregar"><i class="icon-qrcode"></i>Agregar
							</button>
						</div>
					</form>
				</div>				
			</div>

				<script src="/Content/jquery-1.9.1.js"></script>
				<script src="/Content/app.js"></script>
										
		</div>
</div>
